<Window x:Class="HangmanGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hangman" Height="550" Width="525"
        Icon="Resources/Stickman.ico"
        Background="{StaticResource BackgroundBrush}">


        <Window.Resources>
        <!-- Define the gradient brush for the colors -->
        <LinearGradientBrush x:Key="GradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="Red" Offset="0"/>
            <GradientStop Color="Orange" Offset="0.2"/>
            <GradientStop Color="Yellow" Offset="0.4"/>
            <GradientStop Color="Green" Offset="0.6"/>
            <GradientStop Color="Blue" Offset="0.8"/>
            <GradientStop Color="Violet" Offset="1"/>
        </LinearGradientBrush>

    </Window.Resources>
        
    <Grid>
        <!-- Gissade bokstäver -->
        <TextBlock Name="guessedLettersTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="16" TextWrapping="Wrap" Width="100"/>

        <!-- Colorful Header with Gradient -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" Margin="0,10,0,0" Foreground="{StaticResource GradientBrush}">
            HANGMAN
        </TextBlock>

        <TextBlock Name="wordTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Margin="0,65,0,0"/>
       
        <TextBlock Name="hangmanTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" Margin="0,140,0,0"/>
       
        <Button Name="guessButton" Content="Gissa!" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40" Width="100" Click="GuessButton_Click"/>
        
        <Button Name="restartButton" Content="Starta Om" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40" Width="100" Visibility="Collapsed" Click="RestartButton_Click"/>

        <TextBox Name="guessTextBox" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,80" Width="100" KeyDown="GuessTextBox_KeyDown"/>
        
        <TextBlock Name="messageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" FontSize="16"/>
    </Grid>
</Window>